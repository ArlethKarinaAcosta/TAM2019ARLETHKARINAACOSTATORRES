<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="#F8FA6F">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INSTITUTO TECNOLÓGICO DE TEPIC"
            android:textColor="#4B9BD8"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JUEGO DE LA BOTELLA"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:id="@+id/imageView"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="50dp" />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¿Estás listo para jugar?"
            android:textSize="30dp"
            android:textColor="#707102"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arleth Karina Acosta Torres"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proyecto de la unidad 4. Botella giratoria, demostración de animación"
            android:textSize="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taller de dispositivos móviles"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"/>

        <Button
            android:id="@+id/btn_start"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:onClick="onStartBtnClick"
            android:text="¡START!"
            android:background="#EBA2D8"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</LinearLayout>